<!doctype html>
<html lang="pl">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title || "Cracov Automation Hub" %></title>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
  </head>
  <body class="theme">
    <nav class="topbar">
      <div class="topbar__left">
        <a href="/" class="brand">
          <span class="brand__logo">⚙️</span>
          <span class="brand__name">Cracov Automation Hub</span>
        </a>
      </div>
      <div class="topbar__right">
        <% if (user) { %>
          <a class="btn btn--ghost" href="/dashboard">Dashboard</a>
          <form action="/logout" method="post" class="inline">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn btn--primary btn--sm">Wyloguj</button>
          </form>
        <% } else { %>
          <% if (currentPath !== '/login') { %>  <!-- TU jest poprawka -->
            <a class="btn btn--primary" href="/login">Zaloguj</a>
          <% } %>
        <% } %>
      </div>
      
    </nav>

    <main class="page">
      <%- body %>
    </main>

    <footer class="footer">
      <p>© <%= new Date().getFullYear() %> Cracov Automation Hub</p>
    </footer>
  </body>
</html>