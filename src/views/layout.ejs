<!doctype html>
<html lang="pl">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title || "Cracov Automation Hub" %></title>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
  </head>
  <body class="theme">
    <nav class="topbar">
      <div class="topbar__left">
        <a href="/" class="brand">
          <img src="/images/logo.svg" alt="Logo" class="brand__logo" />
          <h1 class="h2">Cracov Automation Hub</h1>
        </a>
      </div>
      <div class="topbar__right">
        <% if (user) { %>
          <form class="inline" method="POST" action="/logout" style="display:inline;">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <button class="btn btn--sm">Wyloguj</button>
          </form>
        <% } %>
      </div>
      
    </nav>

    <main class="page">
      <%- body %>
    </main>

    <footer class="footer">
      <p>Â© <%= new Date().getFullYear() %> Cracov Automation Hub</p>
    </footer>
  </body>
</html>