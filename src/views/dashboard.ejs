
<div class="dash">
  <aside class="dash__sidebar">
    <div class="side-section">
      <div class="side-title">Nawigacja</div>
      <a href="/dashboard" class="side-link side-link--active">📊 Podsumowanie</a>
      <a href="/webhooks"  class="side-link">🔔 Webhooki</a>
      <a href="/runs"      class="side-link">⚡ Wykonania</a>
      <a href="/settings"  class="side-link">⚙️ Ustawienia</a>
    </div>
  </aside>

  <section class="dash__content">
    <h1 class="h2">Witaj, <%= (user && user.name) || "Użytkowniku" %> 👋</h1>
    <div class="grid">
      <div class="card">
        <div class="card__header">
          <h3 class="h5">Status systemu</h3>
        </div>
        <div class="card__body">
          <ul class="stats">
            <aside class="dash__sidebar">
              <div class="side-section">
                <div class="side-title">Nawigacja</div>
            
                <% const userPerms = (user && user.permissions) || []; %>
                <% (navItems || []).filter(i => userPerms.includes(i.perm)).forEach(item => { %>
                  <a
                    class="side-link <%= currentPath === item.href ? 'side-link--active' : '' %>"
                    href="<%= item.href %>"
                  ><%= item.label %></a>
                <% }); %>
              </div>
            </aside>
          </ul>
        </div>
      </div>

      <div class="card">
        <div class="card__header">
          <h3 class="h5">Ostatnie zdarzenia</h3>
        </div>
        <div class="card__body table-wrap">
          <table class="table">
            <thead><tr><th>Data</th><th>Typ</th><th>Źródło</th><th>Status</th></tr></thead>
            <tbody>
              <% (events || []).slice(0,8).forEach(e => { %>
                <tr>
                  <td><%= e.date || "-" %></td>
                  <td><%= e.type || "-" %></td>
                  <td><%= e.source || "-" %></td>
                  <td><span class="badge <%= e.ok ? 'badge--ok' : 'badge--err' %>"><%= e.ok ? 'OK' : 'Błąd' %></span></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
</div>
