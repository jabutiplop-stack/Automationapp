<div class="dash">
    <%- include('partials/sidebar') %>
  
    <section class="dash__content">
      <h1 class="h2"><%= title %></h1>
      <p>
        Ta zakładka służy do testowania integracji SocialAutomation V2.
        Formularz wysyła dane metodą POST do webhooka <code>WEBHOOK_V2_URL</code>.
      </p>
      
      <% if (typeof payload !== 'undefined' && payload) { %>
        <div class="card" style="margin-top:16px;">
          <div class="card__header"><strong>Payload was send</strong></div>
          <div class="card__body">
            <pre><%= JSON.stringify(payload, null, 2) %></pre>
          </div>
        </div>
      <% } %>
  
      <form method="POST" action="/social/v1" class="form card card--elevated" style="padding:16px;">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
  
        <div class="field">
          <label class="label" for="textA">Pole tekstowe A</label>
          <input class="input" id="textA" name="textA" placeholder="Wpisz tekst A" required />
        </div>
  
        <div class="field">
          <label class="label" for="textB">Pole tekstowe B</label>
          <input class="input" id="textB" name="textB" placeholder="Wpisz tekst B" required/>
        </div>
  
        <div class="field">
          <label class="checkbox">
            <input type="checkbox" name="agree" value="1" />
            <span>Czy mam generować grafikę?</span>
          </label>
        </div>
  
        <button class="btn btn--primary" type="submit">Wyślij webhook</button>
      </form>
  
      <% if (typeof sent !== 'undefined' && sent !== null) { %>
        <div class="alert <%= sent ? 'alert--ok' : 'alert--error' %>">
          <strong><%= sent ? 'Wysłano!' : 'Błąd wysyłki' %></strong>
          <div class="muted" style="white-space:pre-wrap;"><%= responseText || '' %></div>
        </div>
      <% } %>
    </section>
  </div>