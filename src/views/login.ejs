<!doctype html>
<section class="center-wrap">
  <div class="card card--elevated login-card">
    <h1 class="h3">Logowanie</h1>
    <p class="muted">Zaloguj się, aby przejść do panelu.</p>

    <% if (error) { %>
      <div class="alert alert--error"><%= error %></div>
    <% } %>

    <form action="/login" method="post" class="form">
      <label class="field">
        <span class="label">Username</span>
        <input name="email" type="text" class="input" placeholder="username" required />
      </label>

      <label class="field">
        <span class="label">Password</span>
        <input name="password" type="password" class="input" placeholder="••••••••" required />
      </label>

      <button class="btn btn--primary btn--lg w-100" type="submit">Log in</button>
    </form>

    <p class="muted mt-2">Zapomniałeś hasła? <a href="#" class="link">Skontaktuj się z adminem</a></p>
  </div>
</section>