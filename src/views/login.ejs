<section class="center-wrap">
    <div class="card card--elevated login-card">
      <h1 class="h3">Logowanie</h1>
      <p class="muted">Zaloguj się, aby przejść do panelu.</p>
  
      <% if (error) { %>
        <div class="alert alert--error"><%= error %></div>
      <% } %>
  
      <form action="/login" method="post" class="form" autocomplete="off" novalidate>
        <!-- CSRF: MUSI być to ukryte pole -->
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  
        <label class="field">
          <span class="label">Nazwa użytkownika</span>
          <input name="username" type="text" class="input" placeholder="np. admin" required />
        </label>
  
        <label class="field">
          <span class="label">Hasło</span>
          <input name="password" type="password" class="input" placeholder="••••••••" required />
        </label>
  
        <button class="btn btn--primary btn--lg w-100" type="submit">Zaloguj</button>
      </form>
  
      <p class="muted mt-2">Zapomniałeś hasła? <a href="#" class="link">Skontaktuj się z adminem</a></p>
    </div>
  </section>
  